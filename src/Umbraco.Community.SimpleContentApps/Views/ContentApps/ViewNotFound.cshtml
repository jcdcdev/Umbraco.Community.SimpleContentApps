@using Umbraco.Community.SimpleContentApps.Core
@using Umbraco.Community.SimpleContentApps.Core.Extensions
@inherits Umbraco.Community.SimpleContentApps.Web.SimpleContentAppViewPage
@{
    var path = $"~/Views/ContentApps/{Model.ContentApp.Alias()}.cshtml";
    var viewComponentName = Model.ContentApp.ViewComponent();
}
<umb-box>
    <umb-box-header title-key="simpleContentApps_viewNotFound">
    </umb-box-header>
    <umb-box-content>
        <p>Please create either of the following:</p>
        <ul>
            <li>A View located at <code>@path</code><umb-code-snippet title='@path' language="'CSHTML'">@Constants.ExampleView</umb-code-snippet></li>
            <li>A ViewComponent called <code>@viewComponentName</code><umb-code-snippet title='@viewComponentName' language="'csharp'">@Constants.ExampleViewComponent(viewComponentName)</umb-code-snippet></li>
        </ul>
    </umb-box-content>
</umb-box>
